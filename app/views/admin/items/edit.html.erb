<h1>Edit Items</h1>

<div class="row">
  <div class="col s12 m7">
    <div class="card">
      <div class="card-content">
        <p>
          <%= form_for(@item, url: admin_item_path) do |f| %>
          <%= f.label :title %>
          <%= f.text_field :title %>
          <%= f.label :description %>
          <%= f.text_field :description %>
          <%= f.label :price %>
          <%= f.text_field :price %>
          <%= f.label :image %>
          <%= f.text_field :image %>
          <%= f.submit "Update Drink" %>
          <% end %>
        </p>
      </div>
    </div>
  </div>
</div>

<br>
<h1 class='container center'>Menu Items</h1>
<br>

<div class="row">
  <div class="col s9">
    <ul class="collection">
      <%@items.each do |item| %>
      <li class="collection-item avatar">
        <%= image_tag(item.image, class: "circle") %>
        <strong><span class="title"><%= item.title.capitalize %></span></strong>
        <p><%= number_to_currency(item.price) %></p>
        <%= button_to "Add to Cart", cart_items_path(id: item.id), class: "secondary-content #40c4ff light-blue accent-2 waves-effect waves-light btn" %>
      </li>

    <% end %>
  </div>

  <div class="col s3" id="butooon">
    <%= button_to cart_path, method: :get, class: "black accent-2 waves-effect waves-light btn" do %>
      <i class="fa fa-shopping-cart"> View Cart</i>
    <% end %>
  </div>
</div>

